@model QuanLyKhachSan.Models.LoaiPhong

@{
    ViewBag.Title = "Sửa Loại Phòng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Sửa Loại Phòng: @Model.TenLoai</h2>

@using (Html.BeginForm("Edit", "LoaiPhong", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="card p-4 shadow-sm">
        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
        @Html.HiddenFor(model => model.LoaiPhongId) @* Bắt buộc phải có ID để biết sửa đối tượng nào *@

        <div class="mb-3 row">
            @Html.LabelFor(model => model.TenLoai, htmlAttributes: new { @class = "col-md-3 col-form-label" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.TenLoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenLoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-3 row">
            @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "col-md-3 col-form-label" })
            <div class="col-md-9">
                @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", rows = 4 })
                @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="mb-3 row">
            <div class="col-md-9 offset-md-3">
                <button type="submit" class="btn btn-warning me-2">
                    <i class="bi bi-pencil-square me-1"></i> Cập nhật
                </button>
                @Html.ActionLink("Trở về Danh sách", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}