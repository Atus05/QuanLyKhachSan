@model IEnumerable<QuanLyKhachSan.Models.HoaDon>

@{
    ViewBag.Title = "Quản lý Hóa Đơn";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Quản lý Hóa Đơn</h2>
<p class="text-muted">Danh sách các hóa đơn đã được thanh toán và hoàn thành.</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Mã Đơn</th>
                <th>Khách hàng</th>
                <th>Ngày Xuất</th>
                <th>Tổng Tiền</th>
                <th>Phương Thức</th>
                <th>Trạng Thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>#@Html.DisplayFor(modelItem => item.DatPhongId)</td>
                    <td>@Html.DisplayFor(modelItem => item.DatPhong.NguoiDung.HoTen)</td>
                    <td>@item.NgayXuat.ToString("dd/MM/yyyy HH:mm")</td>
                    <td><strong class="text-success">@item.TongTien.ToString("N0") ₫</strong></td>
                    <td>@Html.DisplayFor(modelItem => item.PhuongThucThanhToan)</td>
                    <td>
                        <span class="badge bg-success">@Html.DisplayFor(modelItem => item.TrangThaiThanhToan)</span>
                    </td>
                    <td class="text-nowrap">
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.DatPhongId }, new { @class = "btn btn-sm btn-info text-white" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>  