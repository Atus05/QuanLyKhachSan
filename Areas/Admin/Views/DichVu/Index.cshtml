@model IEnumerable<QuanLyKhachSan.Models.DichVu>

@{
    ViewBag.Title = "Quản lý Dịch Vụ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Quản lý Dịch Vụ</h2>

<p>
    @Html.ActionLink("➕ Thêm Dịch Vụ Mới", "Create", null, new { @class = "btn btn-primary mb-3" })
</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<div class="table-responsive">
    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.TenDichVu)</th>
                <th>@Html.DisplayNameFor(model => model.Gia)</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.TenDichVu)</td>
                    <td>@item.Gia.ToString("N0") ₫</td>
                    <td class="text-nowrap">
                        @Html.ActionLink("Sửa", "Edit", new { id = item.DichVuId }, new { @class = "btn btn-sm btn-warning me-2" })
                        <button type="button" class="btn btn-sm btn-danger btn-delete"
                                data-id="@item.DichVuId" data-ten="@item.TenDichVu">
                            Xóa
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $('.btn-delete').click(function () {
                var dichVuId = $(this).data('id');
                var tenDichVu = $(this).data('ten');

                if (confirm('Bạn có chắc chắn muốn xóa Dịch Vụ: ' + tenDichVu + ' không?')) {
                    $.post('@Url.Action("DeleteConfirmed", "DichVu")', { id: dichVuId })
                        .done(function (response) {
                            if (response.success) {
                                window.location.reload();
                            } else {
                                alert('Lỗi khi xóa: ' + response.message);
                            }
                        })
                        .fail(function (xhr, status, error) {
                            alert('Đã xảy ra lỗi hệ thống.');
                        });
                }
            });
        });
    </script>
}