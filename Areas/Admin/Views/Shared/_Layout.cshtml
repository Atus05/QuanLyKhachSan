<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản Lý Khách Sạn (Admin)</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
    <style>
        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #343a40; /* Dark background */
            padding-top: 56px; /* Cách Header */
        }

        .main-content {
            margin-left: 250px;
            padding: 20px;
        }

        .sidebar .nav-link {
            color: #adb5bd;
        }

            .sidebar .nav-link:hover {
                color: #ffffff;
                background-color: #495057;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="/Admin/Home">🏨 ADMIN DASHBOARD</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    </ul>
                    <span class="navbar-text text-white me-3">Xin chào, Admin!</span>
                </div>
            </div>
        </nav>
    </header>

    <div class="sidebar d-flex flex-column p-3">
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a href="/Admin/Home" class="nav-link active" aria-current="page">
                    <i class="fa-solid fa-gauge me-2"></i> Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a href="/Admin/Room" class="nav-link">
                    <i class="fa-solid fa-bed me-2"></i> Quản lý Phòng
                </a>
            </li>
            <li>
                <a href="/Admin/Service" class="nav-link">
                    <i class="fa-solid fa-bell-concierge me-2"></i> Quản lý Dịch vụ
                </a>
            </li>
            <li>
                <a href="/Admin/Customer" class="nav-link">
                    <i class="fa-solid fa-users me-2"></i> Khách hàng
                </a>
            </li>
            <li>
                <a href="/Admin/Booking" class="nav-link">
                    <i class="fa-solid fa-calendar-check me-2"></i> Đặt & Check-in/out
                </a>
            </li>
            <li>
                <a href="/Admin/Invoice" class="nav-link">
                    <i class="fa-solid fa-file-invoice-dollar me-2"></i> Quản lý Hóa đơn
                </a>
            </li>
            <li>
                <a href="/Admin/Statistic" class="nav-link">
                    <i class="fa-solid fa-chart-line me-2"></i> Thống kê Doanh thu
                </a>
            </li>
        </ul>
        <hr class="text-white-50">
        <div class="dropdown">
            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fa-solid fa-user-circle me-2"></i>
                <strong>Admin</strong>
            </a>
            <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                <li><a class="dropdown-item" href="/Admin/Account/ChangePassword">Đổi mật khẩu</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="/Account/Logout">Đăng xuất</a></li>
            </ul>
        </div>
    </div>

    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>